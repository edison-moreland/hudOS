{
  "app": {
    "name": "clock",
    "window": {
      "output": "glasses",
      "position": {
        "x": 1400,
        "y": 0
      },
      "dimensions": {
        "width": 520,
        "height": 112
      }
    }
  },
  "build": [
    {
      "step": "build_go",
      "target": "${SOURCE_DIR}/",
      "out": "${WORKSPACE_DIR}/${APP_NAME}",
      "tags": [
        "nox11"
      ]
    },
    {
      "step": "generate_service",
      "onGlasses": true,
      "out": "${WORKSPACE_DIR}/hud-${APP_NAME}.service"
    },
    {
      "step": "bundle_app",
      "binaries": [
          "${WORKSPACE_DIR}/${APP_NAME}"
      ],
      "units": [
          "${WORKSPACE_DIR}/hud-${APP_NAME}.service"
      ]
    }
  ]
}